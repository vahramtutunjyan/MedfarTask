@{
    ViewBag.Title = "Exam";
}

<h2>@ViewBag.Title.</h2>


@model  Medfar.Interview.Web.Models.ExamViewModel

@using (Html.BeginForm("Users", "Exam", FormMethod.Post))
{
<div class="form-horizontal">
    <div class="form-group">
        @Html.Label("", (string)ViewBag.DuplicateEmail, htmlAttributes: new
      {
          @class = "control-label col-md-2"
      })

        @Html.Label("Email", "Email", htmlAttributes: new
         {
             @class = "control-label col-md-2"
         })



        @Html.TextBoxFor(model => model.Email)
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <div class = "form-group">
        @Html.Label("FirstName", "First Name", htmlAttributes: new
        {
           @class = "control-label col-md-2"
        })
        @Html.TextBoxFor(model => model.FirstName)
        @Html.ValidationMessageFor(model => model.FirstName)
    </div>

    <div class = "form-group">
        @Html.Label("LastName", "Last Name", htmlAttributes: new
        {
            @class = "control-label col-md-2"
        })
        @Html.TextBoxFor(model => model.LastName)
        @Html.ValidationMessageFor(model => model.LastName)
    </div>
    <div>
        <button type="submit" >Add User</button>
    </div>
</div>
   
}



