@model Medfar.Interview.Web.Models.ExampleViewModel
@{
    ViewBag.Title = "Example";
}

@section Scripts
{
    <script src="@Url.Content("~/Scripts/example/example.js")"></script>
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <span> Example </span>


   
</div>

 


<div class="row">
   
            <div class="col-lg-12">
                <div class="tb-container">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>First Name</th>
                                <th>Last Name </th>
                                <th>Email</th>
                                <th>Date Created</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.id</td>
                                    <td>@user.first_name</td>
                                    <td>@user.last_name</td>
                                    <td>@user.email</td>
                                    <td>@user.date_created</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div>
                        @using (Html.BeginForm((string)ViewBag.ActionMethod, "Example", FormMethod.Post))
                        {
                            <table cellpadding="0" cellspacing="0">
                                <tr>
                                    @for (int i = 1; i <= ViewBag.PageCount; i++)
                                    {
                                        <td>
                                            @if (i != ViewBag.CurrentPageIndex)
                                            {
                                                <a href="javascript:PagerClick(@i);">@i</a>
                                            }
                                            else
                                            {
                                                <span>@i</span>
                                            }
                                        </td>
                                    }
                                </tr>
                            </table>
                            <input type="hidden" id="hfCurrentPageIndex" name="currentPageIndex" />
                        }
                        <script type="text/javascript">
                            function PagerClick(index) {
                                document.getElementById("hfCurrentPageIndex").value = index;
                                document.forms[0].submit();
                            }
                        </script>
                        
                        <div>
                            @using (Html.BeginForm("GetUserByName", "Example", FormMethod.Post))
                            {
                                <b>Search by Name</b>
                                @Html.TextBox("UserName");<input type="submit" value="Search" />

                            }


                        </div>
                    </div>

                </div>
            
            </div>
        </div>
